#!/usr/bin/env sh
. "$(dirname "$0")/_/husky.sh"

# Get the current branch name
branch=$(git rev-parse --abbrev-ref HEAD)

# Only push if we're on main or develop branch (adjust as needed)
if [ "$branch" = "main" ] || [ "$branch" = "develop" ]; then
  echo "🚀 Pushing to $branch after successful commit..."
  git push origin "$branch"
else
  echo "ℹ️  Skipping push - not on main or develop branch (current: $branch)"
fi
